<UserControl x:Class="CourseProjectKeyboardApplication.View.CustomControls.KeyboardMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cc="clr-namespace:CourseProjectKeyboardApplication.View.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid
     x:Name="KeyboardGrid"
     Width="750"
     Height="270">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <cc:KeyboardItemTextBlock
         Grid.Column="0"
         Grid.Row="0"
         TextValue="`"
         Tag="`~"
          Style="{StaticResource CustomLeftPinkeyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock 
         Grid.Column="1"
         Grid.Row="0"
         Tag="1!"
         TextValue="1"
         Style="{StaticResource CustomLeftPinkeyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock 
         Grid.Column="2"
         Grid.Row="0"
         Tag="2@"
         TextValue="2"
         Style="{StaticResource CustomLeftPinkeyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="3"
         Grid.Row="0"
         Tag="3#"
         TextValue="3"
         Style="{StaticResource CustomLeftRingKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="4"
         Grid.Row="0"
         Tag="4$"
         TextValue="4"
         Style="{StaticResource CustomLeftMiddleKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="5"
         Grid.Row="0"
         Tag="5%"
         TextValue="5"
         Style="{StaticResource CustomLeftIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="6"
         Grid.Row="0"
         Tag="6^"
         TextValue="6"
         Style="{StaticResource CustomLeftIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="7"
         Grid.Row="0"
         Tag="7&amp;"
         TextValue="7"
         Style="{StaticResource CustomRightIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="8"
         Grid.Row="0"
         TextValue="8"
         Tag="8*"
         Style="{StaticResource CustomRightMiddleKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="9"
         Grid.Row="0"
         Tag="9("
         TextValue="9"
         Style="{StaticResource CustomRightRingKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="10"
         Grid.Row="0"
         Tag="10)"
         TextValue="0"
         Style="{StaticResource CustomRightPinkyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="11"
         Grid.Row="0"
         Tag="-_"
         TextValue="-"
         Style="{StaticResource CustomRightPinkyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="12"
         Tag="=+"
         Grid.Row="0"
         TextValue="="
         Style="{StaticResource CustomRightPinkyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="2"
         Grid.Row="1"
         Tag="qQ"
         TextValue="q"
         Style="{StaticResource CustomLeftPinkeyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="3"
         Grid.Row="1"
         Tag="wW"
         TextValue="w"
         Style="{StaticResource CustomLeftRingKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="4"
         Grid.Row="1"
         Tag="eE"
         TextValue="e"
         Style="{StaticResource CustomLeftMiddleKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="5"
         Grid.Row="1"
         TextValue="r"
         Tag="rR"
        Style="{StaticResource CustomLeftIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="6"
         Grid.Row="1"
         Tag="tT"
         TextValue="t"
         Style="{StaticResource CustomLeftIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="7"
         Grid.Row="1"
         Tag="yY"
         TextValue="y"
         Style="{StaticResource CustomRightIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="8"
         Grid.Row="1"
         Tag="uU"
         TextValue="u"
         Style="{StaticResource CustomRightIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="9"
         Grid.Row="1"
         Tag="iI"
         TextValue="i"
         Style="{StaticResource CustomRightMiddleKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="10"
         Grid.Row="1"
          Tag="oO"
         TextValue="o"
         Style="{StaticResource CustomRightRingKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="11"
         Grid.Row="1"
         Tag="pP"
         TextValue="p"
         Style="{StaticResource CustomRightPinkyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="12"
          Tag="[{"
         Grid.Row="1"
         TextValue="["
         Style="{StaticResource CustomRightPinkyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="13"
         Grid.Row="1"
         Tag="]}"
         TextValue="]"
         Style="{StaticResource CustomRightPinkyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="2"
         Grid.Row="2"
         Tag="aA"
         TextValue="a"
         Style="{StaticResource CustomLeftPinkeyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="3"
         Grid.Row="2"
         Tag="sS"
         TextValue="s"
         Style="{StaticResource CustomLeftRingKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="4"
         Grid.Row="2"
         Tag="dD"
         TextValue="d"
         Style="{StaticResource CustomLeftMiddleKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="5"
         Grid.Row="2"
         Tag="fF"
         TextValue="f"
        Style="{StaticResource CustomLeftIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="6"
         Grid.Row="2"
         Tag="gG"
         TextValue="g"
         Style="{StaticResource CustomLeftIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock 
         Grid.Column="7"
         Grid.Row="2"
         Tag="hH"
         TextValue="h"
         Style="{StaticResource CustomRightIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="8"
         Grid.Row="2"
         Tag="jJ"
         TextValue="j"
         Style="{StaticResource CustomRightIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="9"
         Grid.Row="2"
         Tag="kK"
         TextValue="k"
         Style="{StaticResource CustomRightMiddleKeyboardItemBlock}"
         />
        <cc:KeyboardItemTextBlock
         Grid.Column="10"
         Grid.Row="2"
         Tag="lL"
         TextValue="l"
         Style="{StaticResource CustomRightRingKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="11"
         Grid.Row="2"
         Tag=";:"
         TextValue=";"
         Style="{StaticResource CustomRightPinkyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="12"
         Grid.Row="2"
         Tag="'\u0022"
         TextValue="'"
         Style="{StaticResource CustomRightPinkyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="13"
         Grid.Row="2"
         Tag="\|"
         TextValue="\"
         Style="{StaticResource CustomRightPinkyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="2"
         Grid.Row="3"
         Tag="zZ"
         TextValue="z"
         Style="{StaticResource CustomLeftPinkeyKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="3"
         Grid.Row="3"
         TextValue="x"
         Tag="xX"
         Style="{StaticResource CustomLeftRingKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="4"
         Grid.Row="3"
         Tag="cC"
         TextValue="c"
         Style="{StaticResource CustomLeftMiddleKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock   
         Grid.Column="5"
         Grid.Row="3"
         Tag="vV"
         TextValue="v"
         Style="{StaticResource CustomLeftIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="6"
         Grid.Row="3"
         Tag="bB"
         TextValue="b"
         Style="{StaticResource CustomLeftIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="7"
         Grid.Row="3"
         Tag="nN"
         TextValue="n"
         Style="{StaticResource CustomRightIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="8"
         Grid.Row="3"
         Tag="mM"
         TextValue="m"
         Style="{StaticResource CustomRightIndexKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="9"
         Grid.Row="3"
         Tag=",\u003C"
         TextValue=","
         Style="{StaticResource CustomRightMiddleKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="10"
         Grid.Row="3"
         Tag=".>"
         TextValue="."
         Style="{StaticResource CustomRightRingKeyboardItemBlock}"/>
        <cc:KeyboardItemTextBlock
         Grid.Column="11"
         Grid.Row="3"
         TextValue="/"
         Tag="/?"
         Style="{StaticResource CustomRightPinkyKeyboardItemBlock}"/>
        <cc:KeyboardControlItemTextBlock
            x:Name="SpaceLabel"
            Tag="Space"
            Grid.Row="4"
            Grid.Column="4"
            Grid.ColumnSpan="5"
            Margin="10 0 0 0"
            Style="{StaticResource CustomKeyboardControlItemBlock}"/>

        <cc:KeyboardControlItemTextBlock
          
            x:Name="RightShiftLabel"
            Tag="Shift"
            Grid.Column="12"
            IsFocusKeyboardItem="True"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            TextValue="Shift"
            Style="{StaticResource CustomKeyboardControlItemBlock}"/>

        <cc:KeyboardControlItemTextBlock
            x:Name="TabLabel"
            Grid.Column="0"
            Grid.Row="1"
            Tag="Tab"
            Grid.ColumnSpan="2"
            TextValue="Tab"
            Style="{StaticResource CustomKeyboardControlItemBlock}"/>
        <cc:KeyboardControlItemTextBlock
            x:Name="EraseLabel"
            Grid.Column="13"
            Tag="Back"
            Grid.Row="0"
            TextValue="←"
            Style="{StaticResource CustomKeyboardControlItemBlock}"
           />
        <cc:KeyboardControlItemTextBlock
         x:Name="LeftShiftElement"
         TextValue="Shift"
         Tag="Shift"
         Grid.Column="0"
         Grid.Row="3"
         Grid.ColumnSpan="2"
         Style="{StaticResource CustomKeyboardControlItemBlock}"/>
        <cc:KeyboardControlItemTextBlock
         x:Name="CapsElement"
         Tag="Caps"
         TextValue="Caps"
         Grid.Column="0"
         Grid.Row="2"
         Grid.ColumnSpan="2"
         Style="{StaticResource CustomKeyboardControlItemBlock}"/>
  

    </Grid>
</UserControl>
