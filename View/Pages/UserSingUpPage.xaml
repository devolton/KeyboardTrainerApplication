<Page x:Class="CourseProjectKeyboardApplication.View.Pages.UserSingInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:CourseProjectKeyboardApplication.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="UserSingInPage">

    <StackPanel
        Margin="40 0 0 0"
        Orientation="Vertical"
        HorizontalAlignment="Center">
        <TextBox x:Name="SingInFullNameTextBox"
                 Margin="0 0 0 10"
                 HorizontalAlignment="Left"
                 BorderBrush="Silver"
                 Width="300"
                 Background="Transparent"
                 materialDesign:HintAssist.Hint="Full name"
                 FontSize="14"
                 Style="{StaticResource MaterialDesignFilledTextBox}"/>
        <TextBox x:Name="SingInLoginTextBox"
                 Margin="0 10 0 10"
                 HorizontalAlignment="Left"
                 BorderBrush="Silver"
                 Background="Transparent"
                 Width="300"
                 materialDesign:HintAssist.Hint="Login"
                 FontSize="14"
                 Style="{StaticResource MaterialDesignFilledTextBox}"/>
        <TextBox x:Name="SingInEmailTextBox"
                 Margin="0 10 0 10"
                 HorizontalAlignment="Left"
                 BorderBrush="Silver"
                 Background="Transparent"
                 Width="300"
                 materialDesign:HintAssist.Hint="Email"
                 FontSize="14"
                 Style="{StaticResource MaterialDesignFilledTextBox}"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Width="340"
                    Margin="0 10 0 10"
                    VerticalAlignment="Center">
            <PasswordBox x:Name="SingInPasswordBox"
                     Width="300"
                     Margin="0 0 5 0 " 
                     Background="Transparent"
                     materialDesign:HintAssist.Hint="Password"
                     FontSize="14"
                     BorderBrush="Silver"
                     Style="{StaticResource MaterialDesignFilledPasswordBox}"/>
            <TextBlock Text="👁"
                       Cursor="Hand"
                       FontSize="14"
                       Margin="0 7 0 0"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextDecorations="None"
                       Foreground="Silver"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Width="340"
                    VerticalAlignment="Center">
            <PasswordBox x:Name="SingInConfirmPasswordBox"
                         Width="300"
                         Background="Transparent"
                         Margin="0 0 5 0 " 
                         materialDesign:HintAssist.Hint="Confirm password"
                         FontSize="14"
                         BorderBrush="Silver"
                         Style="{StaticResource MaterialDesignFilledPasswordBox}"/>
            <TextBlock Text="👁"
                       Cursor="Hand"
                       FontSize="14"
                       Margin="0 7 0 0"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextDecorations="None"
                       Foreground="Silver"/>
        </StackPanel>
        <Button Content="Sing up"
                Margin="0 20 15 0"
                Width="160"
                Height="50"
                FontSize="16"
                FontWeight="Bold"
                BorderBrush="{StaticResource CustomDeepBlueViolet}"
                BorderThickness="4"
                Background="{StaticResource CustomDeepBlue}"/>

    </StackPanel>
</Page>
