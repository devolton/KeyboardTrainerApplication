<Page x:Class="CourseProjectKeyboardApplication.View.Pages.UserLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:CourseProjectKeyboardApplication.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="340" d:DesignWidth="320"
      Title="UserLoginPage">

    <StackPanel
        Margin="40 40 0 0">
        <TextBox x:Name="LoginTextBox"
                 Margin="0 20 0 20"
                 HorizontalAlignment="Left"
                 BorderBrush="Silver"
                 Width="240"
                 materialDesign:HintAssist.Hint="Login\Email"
                 FontSize="14"
                 Style="{StaticResource MaterialDesignFilledTextBox}"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Width="280"
                    VerticalAlignment="Center">
            <PasswordBox x:Name="LoginPasswordBox"
                     Width="240"
                      Margin="0 0 5 0 " 
                     materialDesign:HintAssist.Hint="Password"

             FontSize="14"
             BorderBrush="Silver"
             Style="{StaticResource MaterialDesignFilledPasswordBox}"/>
            <TextBlock Text="👁"
                       Cursor="Hand"
                       FontSize="18"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextDecorations="None"
                       Foreground="Silver"/>
        </StackPanel>
        <CheckBox IsChecked="False"
                  HorizontalAlignment="Center"
                  Margin="0 20 20 0 "
                  Cursor="Hand">
            <CheckBox.Content>
                <TextBlock Text="Remember me?"
                           TextAlignment="Center"
                           Foreground="{StaticResource CustomCoal}"
                           FontSize="12"
                 Padding="0 0 0 2"/>
            </CheckBox.Content>
        </CheckBox>
        <Button Content="Login"
                Margin="0 20 20 0"
                Width="140"
                Height="50"
                Background="Blue"/>

    </StackPanel>
</Page>
