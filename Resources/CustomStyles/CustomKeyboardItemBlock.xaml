<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:cc="clr-namespace:CourseProjectKeyboardApplication.View.CustomControls">
    <Style x:Key="CustomKeyboardItemBlock" TargetType="cc:KeyboardItemTextBlock">
        <Style.Setters>
            <Setter Property="ShadowEffectOpacity" Value="0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSizeValue" Value="18"/>
            <Setter Property="MarginValue" Value="3"/>
            <Setter Property="FontWeightValue" Value="Medium"/>
            <Setter Property="ForegroundColorValue" Value="{StaticResource CustomCoal}"/>
        </Style.Setters>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=IsErrorPushedKeyboardItem}" Value="True">
                <Setter Property="BackColorValue" Value="Red"/>
                <Setter Property="BorderThickness" Value="3 2 3 7"/>
                <Setter Property="BorderBrushValue" Value="DarkRed"/>
                <Setter Property="ForegroundColorValue" Value="{StaticResource CustomKeyboardControlItemBackBrush}"/>
                <Setter Property="ShadowEffectOpacity" Value="0.7"/>
                <Setter Property="MarginValue" Value="0"/>
                <Setter Property="FontWeightValue" Value="Bold"/>
                <Setter Property="FontSizeValue" Value="22"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=IsFocusKeyboardItem}" Value="True">
                <Setter Property="ShadowEffectOpacity" Value="0.7"/>
                <Setter Property="FontWeightValue" Value="Bold"/>
                <Setter Property="MarginValue" Value="0"/>
                <Setter Property="FontSizeValue" Value="22"/>
                <Setter Property="BorderThickness" Value="3 2 3 7"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="CustomLeftPinkeyKeyboardItemBlock" TargetType="cc:KeyboardItemTextBlock" BasedOn="{StaticResource CustomKeyboardItemBlock}">
