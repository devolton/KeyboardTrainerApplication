                     xmlns:cc="clr-namespace:CourseProjectKeyboardApplication.View.CustomControls">
    <Style x:Key="CustomLeftPinkeyKeyboardItemBlock" TargetType="cc:KeyboardItemTextBlock">
        <Style.Setters>
            <Setter Property="BackColorValue" Value="{StaticResource CustomLeftPinkyKeyBrush}"/>
            <Setter Property="ForegroundColorValue" Value="{StaticResource CustomCoal}"/>
            <Setter Property="BorderBrushValue" Value="{StaticResource CustomLeftPinkyKeyBorderBrush}"/>
            <Setter Property="ShadowEffectOpacity" Value="0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSizeValue" Value="18"/>
            <Setter Property="MarginValue" Value="3"/>

        </Style.Setters>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsErrorPushedKeyboardItem}" Value="True">
                <Setter Property="BackColorValue" Value="Red"/>


            </DataTrigger>
        </Style.Triggers>
    </Style>
